{% extends 'base.html.twig' %}

{% block title %}Blagues index
{% endblock %}

{% block body %}
	<h1>Blagues index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for blague in blagues %}
				<tr>
					<td>{{ blague.id }}</td>
					<td>{{ blague.name }}</td>
					<td>{{ blague.description }}</td>
					<td>
						<a href="{{ path('app_blagues_show', {'id': blague.id}) }}">show</a>
						<a href="{{ path('app_blagues_edit', {'id': blague.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_blagues_new') }}">Create new</a>
{% endblock %}
